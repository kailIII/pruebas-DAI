<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:orientation="vertical"
	android:layout_width="match_parent">
	<TextView android:id="@+id/textView3" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="Comanda"
		android:textSize="20px" android:layout_gravity="center_horizontal">
	</TextView>
	<LinearLayout android:id="@+id/cabComanda"
		android:orientation="horizontal" android:layout_width="match_parent"
		android:baselineAligned="true" android:layout_height="10pt">
		<TextView android:id="@+id/tvCam" android:textSize="15px"
			android:text="Camarero nº ?" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="left">
		</TextView>
		<TextView android:id="@+id/tvMesa" android:text="Mesa nº ?"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_gravity="right" android:layout_marginLeft="70px"
			android:textSize="15px">
		</TextView>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
		<Button android:text="Añadir" android:id="@+id/btAnadir" android:layout_width="wrap_content" android:onClick="onClick" android:layout_height="match_parent" android:layout_gravity="clip_vertical"></Button>
		<Button android:text="Borrar" android:id="@+id/btBorrar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></Button>
		<Button android:text="Marchar" android:id="@+id/btMarchar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"></Button>
	</LinearLayout>
	<TableLayout android:stretchColumns="4"
		android:layout_width="wrap_content" android:id="@+id/TablaComanda"
		android:layout_height="wrap_content">
		<TableRow android:id="@+id/tableRow1" android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<TextView android:text="nºLin" 
				android:width="20pt" />
			<TextView android:text="Articulo" 
				android:width="50pt" />
			<TextView android:text="Cant" 
				android:width="25px" />
			<TextView android:text="Estado" 
				android:width="35pt" />
		</TableRow>


	</TableLayout>
</LinearLayout>
